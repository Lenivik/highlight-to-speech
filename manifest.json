{
  "manifest_version": 2,
  "name": "Text to Speech",
  "version": "1.0",
  "permissions": ["activeTab"],
  "web_accessible_resources": ["icon.png"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}